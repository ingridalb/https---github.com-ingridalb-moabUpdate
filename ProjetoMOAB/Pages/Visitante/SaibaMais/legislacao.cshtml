@page
@model ProjetoMOAB.Pages.Visitante.SaibaMais.legislacaoModel
@{
    ViewData["Title"] = "Legislação";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<header class="masthead bg-primary text-white text-center">
    <div class="container d-flex align-items-center flex-column">
        <!-- Masthead Avatar Image-->
        <a href="/#moab">
            <img id="moab" class="masthead-avatar mb-5" src="/assets/img/portfolio/LogoMOAB.png" alt="..." />
        </a>
        <!-- Masthead Heading-->
        <h1 class="MOAB-Header mb-0">Sobre nós</h1>
        <!-- Icon Divider-->
        <div class="divider-custom divider-light">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fa-solid fa-puzzle-piece"></i></div>
            <div class="divider-custom-line"></div>
        </div>

    </div>

</header>


<br />

<!-- Botão de Voltar -->
<div class="container text-center mt-4">
    <a href="javascript:history.back()" class="btn btn-secondary btn-lg"><i class="fas fa-arrow-left"></i> Voltar</a>
    <br><br>
</div>



<section class="legislation-section py-5 bg-light">
    <div class="container">
        <!-- Título principal com destaque -->
        <h1 class="text-center mb-5 display-4 font-weight-bold">Legislação</h1>

        <!-- Seção 1: Regulamentação da Lei -->
        <div class="mb-5 p-4 bg-white shadow rounded">
            <h3 class="text-primary mb-3"><i class="fas fa-balance-scale"></i> Regulamentação da Lei nº 12.764/2012</h3>
            <p class="lead">Regulamenta a Lei nº 12.764, de 27 de dezembro de 2012, que institui a Política Nacional de Proteção dos Direitos da Pessoa com Transtorno do Espectro Autista.</p>
            <a class="btn btn-outline-primary btn-lg" href="https://www.planalto.gov.br/ccivil_03/_ato2011-2014/2014/decreto/d8368.htm" target="_blank">
                <i class="fas fa-file-alt"></i> Acessar Decreto
            </a>
        </div>

        <!-- Seção 2: Lei 12.764/2012 -->
        <div class="mb-5 p-4 bg-white shadow rounded">
            <h3 class="text-primary mb-3"><i class="fas fa-gavel"></i> Lei 12.764/2012 - Lei Berenice Piana</h3>
            <p class="lead">Esta Lei institui a Política Nacional de Proteção dos Direitos da Pessoa com Transtorno do Espectro Autista e estabelece diretrizes para sua consecução.</p>
            <a class="btn btn-outline-primary btn-lg" href="https://www.planalto.gov.br/ccivil_03/_ato2011-2014/2012/lei/l12764.htm" target="_blank">
                <i class="fas fa-file-alt"></i> Acessar Lei
            </a>
        </div>

        <!-- Seção 3: Isenção de IPI, ICMS e IPVA -->
        <div class="mb-5 p-4 bg-white shadow rounded">
            <h3 class="text-primary mb-3"><i class="fas fa-car"></i> Isenção de IPI, ICMS e IPVA</h3>
            <p class="lead">As pessoas portadoras de deficiência física, visual, mental severa ou profunda, ou autistas, poderão adquirir veículos com isenção de IPI, ICMS e IPVA.</p>
            <a class="btn btn-outline-primary btn-lg" href="https://www.planalto.gov.br/ccivil_03/_ato2011-2014/2014/decreto/d8368.htm" target="_blank">
                <i class="fas fa-file-alt"></i> Saiba Mais
            </a>
        </div>
    </div>
</section>
