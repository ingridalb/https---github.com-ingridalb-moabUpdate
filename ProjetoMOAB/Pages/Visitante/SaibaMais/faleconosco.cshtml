@page
@model ProjetoMOAB.Pages.Visitante.SaibaMais.faleconoscoModel
@{
    ViewData["Title"] = "Fale Conosco";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<header class="masthead bg-primary text-white text-center">
    <div class="container d-flex align-items-center flex-column">
        <!-- Masthead Avatar Image-->
        <a href="/#moab">
            <img id="moab" class="masthead-avatar mb-5" src="/assets/img/portfolio/LogoMOAB.png" alt="Logo MOAB" />
        </a>
        <!-- Masthead Heading-->
        <h1 class="MOAB-Header mb-0">Contato</h1>
        <!-- Icon Divider-->
        <div class="divider-custom divider-light">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fa-solid fa-puzzle-piece"></i></div>
            <div class="divider-custom-line"></div>
        </div>

    </div>
</header>

<!-- Botão de Voltar -->
<div class="container text-center mt-4">
    <a href="javascript:history.back()" class="btn btn-secondary btn-lg"><i class="fas fa-arrow-left"></i> Voltar</a>
    <br><br>
</div>


<section class="contact-section py-5">
    <div class="container">
        <!-- Título principal -->
        <h1 class="text-center mb-5">FALE CONOSCO</h1>

        <div class="row">
            <!-- Informações de contato -->
            <div class="col-lg-6 mb-5">
                <h2 class="mb-4">Movimento Orgulho Autista Brasil</h2>
                <p><strong>Somente para correspondência:</strong></p>
                <address>
                    SBS Quadra 02<br>
                    Bloco E - Ed. Prime - Sala 206<br>
                    CEP: 70.070-120
                </address>

                <p><strong>Telefones:</strong></p>
                <p>
                    <i class="fas fa-phone-alt"></i> (61) 9 9646-7666<br>
                    <i class="fas fa-phone-alt"></i> 9 9101-2399
                </p>

                <p><strong>Email:</strong></p>
                <p>
                    <i class="fas fa-envelope"></i>
                    <a href="mailto:moaborgulhoautista@gmail.com">moaborgulhoautista@gmail.com</a>
                </p>
            </div>

            <!-- Imagens decorativas -->
            <div class="col-lg-6 mb-5">
                <div class="row">
                    <div class="col-md-6 mb-4">
                        <img src="/assets/img/saibamais/iStock-1213546791-scaled.jpg" alt="Imagem 1" class="img-fluid rounded shadow-sm">
                    </div>
                    <div class="col-md-6 mb-4">
                        <img src="/assets/img/saibamais/Capemisa-Blog-01.04.png" alt="Imagem 2" class="img-fluid rounded shadow-sm">
                    </div>
                    <div class="col-md-6 mb-4">
                        <img src="/assets/img/saibamais/dia-mundial-do-autismo.png" alt="Imagem 3" class="img-fluid rounded shadow-sm">
                    </div>
                    <div class="col-md-6 mb-4">
                        <img src="/assets/img/saibamais/Dia-mundial-del-Autismo-Datos-sobre-el-trastorno.webp" alt="Imagem 4" class="img-fluid rounded shadow-sm">
                    </div>
                </div>
            </div>
        </div>

        <!-- Formulário de Contato -->
        <div class="row mt-5">
            <div class="col-lg-8 mx-auto">
                <h2 class="text-center mb-4">Envie sua mensagem</h2>
                <form action="/send-message" method="post">
                    <div class="form-group mb-3">
                        <label for="name">Nome</label>
                        <input type="text" class="form-control" id="name" name="name" placeholder="Seu nome" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="Seu email" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="subject">Assunto</label>
                        <input type="text" class="form-control" id="subject" name="subject" placeholder="Assunto da mensagem" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="message">Mensagem</label>
                        <textarea class="form-control" id="message" name="message" rows="5" placeholder="Escreva sua mensagem" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Enviar</button>
                </form>
            </div>
        </div>
    </div>
</section>


