@page
@model ProjetoMOAB.Pages.Visitante.SaibaMais.trabalhosModel
@{
    ViewData["Title"] = "Trabalhos Desenvolvidos";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<header class="masthead bg-primary text-white text-center">
    <div class="container d-flex align-items-center flex-column">
        <a href="/#moab">
            <img id="moab" class="masthead-avatar mb-5" src="/assets/img/portfolio/LogoMOAB.png" alt="..." />
        </a>
        <h1 class="MOAB-Header mb-0">Trabalhos Desenvolvidos</h1>
        <div class="divider-custom divider-light">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fa-solid fa-puzzle-piece"></i></div>
            <div class="divider-custom-line"></div>
        </div>
        <p class="masthead-subheading font-weight-light mb-0">Conheça as iniciativas do MOAB</p>
    </div>
</header>

<section>

    <div class="container text-center mt-4">
        <a href="javascript:history.back()" class="btn btn-secondary btn-lg"><i class="fas fa-arrow-left"></i> Voltar</a>
        <br><br>
    </div>

    <div class="container">
        <div class="row row-cols-1 row-cols-md-2 g-4">
            <!-- Card 1: Blitz do Autismo -->
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="/assets/img/saibamais/whatsapp-image-2023-09-21-at-08-13-03.jpeg" class="card-img-top img-fluid" alt="Blitz do Autismo" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title text-primary">Blitz do Autismo</h5>
                        <p class="card-text">Iniciativa do MOAB em parceria com a PRF para conscientizar motoristas sobre o autismo.</p>
                        <p class="card-text">A Blitz do Autismo ocorre desde 2005.</p>
                    </div>
                </div>
            </div>

            <!-- Card 2: Desabafo Autista / Asperger -->
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="/assets/img/saibamais/Desabafo afo.webp" class="card-img-top img-fluid" alt="Desabafo Autista" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title text-primary">Desabafo Autista / Asperger</h5>
                        <p class="card-text">Encontros para troca de experiências sobre o Autismo e Asperger, promovidos desde 2005.</p>
                    </div>
                </div>
            </div>

            <!-- Card 3: Prêmio Orgulho Autista -->
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="/assets/img/saibamais/premium.jpg" class="card-img-top img-fluid" alt="Prêmio Orgulho Autista" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title text-primary">Prêmio Orgulho Autista</h5>
                        <p class="card-text">Premiação anual desde 2005 para destacar contribuições à comunidade autista.</p>
                        <a asp-page="/Visitante/SaibaMais/premiacao" class="btn btn-primary">Veja o Prêmio de 2016</a>
                    </div>
                </div>
            </div>

            <!-- Card 4: Projeto de Apoio Psicológico -->
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="/assets/img/saibamais/download.jpg " class="card-img-top img-fluid" alt="Apoio Psicológico" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title text-primary">Projeto de Apoio Psicológico</h5>
                        <p class="card-text">Projeto criado em 2013 para oferecer apoio psicológico integral às famílias de pessoas com autismo.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
<br />

<br />

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

<style>
    .card-title {
        font-size: 1.2rem;
        font-weight: bold;
    }

    .card-text {
        font-size: 0.95rem;
    }

    .container {
        max-width: 1100px;
    }

    .card-body {
        padding: 15px;
    }
</style>
