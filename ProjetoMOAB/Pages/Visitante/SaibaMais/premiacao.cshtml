@page
@model ProjetoMOAB.Pages.Visitante.SaibaMais.premiacaoModel
@{
    ViewData["Title"] = "Premios-2016";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<header class="masthead bg-primary text-white text-center">
    <div class="container d-flex align-items-center flex-column">
        <a href="/#moab">
            <img id="moab" class="masthead-avatar mb-5" src="/assets/img/portfolio/LogoMOAB.png" alt="Logo MOAB" />
        </a>
        <h1 class="MOAB-Header mb-0">Diretores e Conselheiros da nossa instituição</h1>
        <div class="divider-custom divider-light">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fa-solid fa-puzzle-piece"></i></div>
            <div class="divider-custom-line"></div>
        </div>
        <p class="masthead-subheading font-weight-light mb-0">Saiba mais</p>
    </div>
</header>

<!-- Botão de Voltar -->
<div class="container text-center mt-4">
    <a href="javascript:history.back()" class="btn btn-secondary btn-lg"><i class="fas fa-arrow-left"></i> Voltar</a>
    <br><br>
</div>


<section class="premios-section py-5">
    <div class="container">
        <h2 class="text-center mb-4">Prêmio Orgulho Autista - 2016 🏆</h2>

        <div class="row g-4">
            <!-- Livro Destaque -->
            <div class="col-md-6 col-lg-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title"><i class="fa-solid fa-trophy"></i> Livro Destaque</h5>
                        <p class="card-text"><strong>ESPECIAL MENTE AZUL</strong> - Viviani Guimarães</p>
                        <p class="card-text">O livro fala sobre as características de uma pessoa autista, usando uma linguagem bem simples.</p>
                    </div>
                </div>
            </div>

            <!-- Diretor e Escola Destaque -->
            <div class="col-md-6 col-lg-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title"><i class="fa-solid fa-trophy"></i> Diretor e Escola Destaque</h5>
                        <p class="card-text"><strong>Diretora:</strong> Renata Dreux</p>
                        <p class="card-text"><strong>Escola:</strong> ESPECIAL CRESCER - PIRATININGA</p>
                        <p class="card-text"><strong>Cidade:</strong> Niterói – RJ</p>
                        <p class="card-text">Excelente trabalho com autistas severos.</p>
                    </div>
                </div>
            </div>

            <!-- Professor Destaque -->
            <div class="col-md-6 col-lg-4">
                <div class="card h-100">
