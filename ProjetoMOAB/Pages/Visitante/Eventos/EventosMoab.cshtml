@page
@model ProjetoMOAB.Pages.Visitante.Eventos.EventosMoabModel
@{
    ViewData["Title"] = "Eventos";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<header class="masthead bg-primary text-white text-center">
    <div class="container d-flex align-items-center flex-column">
        <!-- Masthead Avatar Image-->
        <a href="/#moab">
            <img id="moab" class="masthead-avatar mb-5" src="/assets/img/portfolio/LogoMOAB.png" alt="..." />
        </a>

        <!-- Masthead Heading-->
        <h1 class="MOAB-Header mb-0">MOAB - Movimento Orgulho Autista Brasil</h1>
        <!-- Icon Divider-->
        <div class="divider-custom divider-light">
            <div class="divider-custom-line"></div>
            <div class="divider-custom-icon"><i class="fa-solid fa-puzzle-piece"></i></div>
            <div class="divider-custom-line"></div>
        </div>
        <!-- Masthead Subheading-->
        <p class="masthead-subheading font-weight-light mb-0">Todos somos voluntários!</p>
    </div>
</header>

<section class="container my-5">
    <h2 class="text-center mb-4">Nossos Eventos</h2>
    <div class="row">
        <!-- Evento 1 -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card">
                <img class="card-img-top" src="/assets/img/portfolio/6-Dia-Mundial-de-Conscientizacao-do-Autismo.jpg" alt="Evento 1">
                <div class="card-body">
                    <h5 class="card-title">Evento 2022 - Galeria de fotos</h5>
                    <p class="card-text">No dia 02/03/2022, realizamos um grande evento de conscientização sobre o autismo.</p>
                    <a asp-page="/Visitante/Eventos/evento2022" class="btn btn-primary">Saiba Mais</a> <!-- Botão de Acesso -->
                </div>
            </div>
        </div>
        <!-- Evento 2 -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card">
                <img class="card-img-top" src="/assets/img/eventos/evento2.jpg" alt="Evento 2">
                <div class="card-body">
                    <h5 class="card-title">Evento 2: Workshop de Inclusão</h5>
                    <p class="card-text">Workshop com profissionais da área sobre como promover a inclusão social e educacional.</p>
                    <a href="/Eventos/Detalhes/2" class="btn btn-primary">Saiba Mais</a> <!-- Botão de Acesso -->
                </div>
            </div>
        </div>
        <!-- Evento 3 -->
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card">
                <img class="card-img-top" src="/assets/img/eventos/evento3.jpg" alt="Evento 3">
                <div class="card-body">
                    <h5 class="card-title">Evento 3: Palestra com Especialistas</h5>
                    <p class="card-text">Especialistas discutiram os desafios e avanços no tratamento do autismo.</p>
                    <a href="/Eventos/Detalhes/3" class="btn btn-primary">Saiba Mais</a> <!-- Botão de Acesso -->
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>


<style>

    /* Definir altura mínima para os cards */
    .card {
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    /* Garantir que o corpo do card ocupe o espaço disponível */
    .card-body {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }



</style>